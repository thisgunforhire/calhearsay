<%#hos, bums, celebs, geeks, hot, other%>
<div align="center"><h1>top ranked <br>by category</h1></div>
<%@query = Entry.find(:all)%>

<%@hos2 = 0%>
<%for entry in @query%>
    <%if entry.category == 'hos'%>
      <%if entry.rating >= @hos2%>
        <%@hos2 = entry.rating%>
        <%@ho = entry%>
<%end%><%end%><%end%>

<%@bums2 = 0%>
