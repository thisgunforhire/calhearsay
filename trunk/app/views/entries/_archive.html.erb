<%#hos, bums, celebs, geeks, hot, other%>
<div align="center"><h1>archive</h1></div>
<%@query = Entry.find(:all)%>

<%@hos = 0%>
<%@bums = 0%>
<%@celebs = 0%>
<%@geeks = 0%>
<%@hot = 0%>
<%@other = 0%>

<div align="center">
<%for entry in @query%>
<%if entry.category == 'hos'%>
  <%if @hos == 0%>
    <%@hos += 1%>
    <c1>(hos)</c1><br/>
  <%end%>
  <subs><%= link_to h(truncate(entry.title,16)), entry %></subs><br/>
  <% if entry.picture != '' %>
    <img width=100 class="img-border" src="<%=entry.picture%>">
  <% else %>
  <% if entry.pic != nil %>
    <img width=100 class="img-border" src="<%=entry.pic.public_filename %>">
  <% end %>
  <% end %><br/>
<%end%>
<%end%>
</div>

