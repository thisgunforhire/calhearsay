<h1>Post a comment</h1>

<% form_for([@entry,@comment]) do |f| %>
  <%= f.error_messages %>

  <p>
    <c1><%= f.label :comment %></c1><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <b>Would you like to remain anonymous?</b> <br/>
    <select name="comment[anon]" id="comment_anon">
    <option value="no">no</option>
    <option value="yes">yes</option>
</select>
  </p>
  <p>
    <%= f.submit "Post" %>
  </p>
<% end %>

<%= link_to 'Back', entry_path(@entry) %>
