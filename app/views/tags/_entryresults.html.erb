    <p>You must enter a search term.</p>
<% end %>

<% if params[:query] != "" %>

<% if searchresults2.length != 0 %>


  <% i = 0 %>
	<% for tag in searchresults2 %>
    
    <% for entry in elist %>
      <% for t in entry.tags %>
        <% if t.tag == tag.tag %>
          <% if i == 0 %>
            Related Tags:  
            <p align=center><%= link_to h(tag.tag), entry_tag_url(entry,tag) %></p>
