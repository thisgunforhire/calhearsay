<div align="center">
<% if logged_in? -%>
  <div id="user-bar-greeting">Logged in as <%#= link_to_current_user :content_method => :login %><b><%#= current_user.login %></b></div>
  <% @user = User.find(current_user.id) %>
  
  <%= link_to h(@user.login), @user %>
  
  <p align="left"><subs>entries posted: <%=@user.entry_count%>
  comments posted: <%=@user.comment_count%>
  </subs></p>
  <p>
  <%if @user.userpic.filename != nil%>
  <img width="100" src="<%= @user.userpic.public_filename %>" border="1">
  <%else%>
  <img src="../../../images/smiley.jpg" border="1">
  <%end%>
  </p>
  <div id="user-bar-action"  >(<%= link_to "Log out", logout_path, { :title => "Log out" }    %>)</div>
  <p><h1>top ranked users</h1></p>
    <%@u = User.find(:all)%>
    <%@u_ent = 0%>
    <%@u_com = 0%>
    <%for user in @u%>
      <%if user.entry_count >= @u_ent%>
        <%@u_ent = user.entry_count%>
      <%end%>
      <%if user.comment_count >= @u_com%>
        <%@u_com = user.comment_count%>
      <%end%>
    <%end%>
    <%for user in @u%>
      <%if user.entry_count == @u_ent%>
        <%@u_ent+=1%>
        user with most entries:
        <p align="center">
        <%if user.userpic.filename != nil%>
          <img width="100" src="<%= user.userpic.public_filename %>" border="1">
        <%else%>
          <img src="../../../images/smiley.jpg" border="1">
        <%end%>
        <br>
        <b><%= link_to h(user.login), user %></b>
        </p>
      <%end%>
      <%if user.comment_count == @u_com%>
        <%@u_com+=1%>
        user with most comments:
        <p align="center">
        <%if user.userpic.filename != nil%>
          <img width="100" src="<%= user.userpic.public_filename %>" border="1">
        <%else%>
          <img src="../../../images/smiley.jpg" >
        <%end%>
        <br>
        <b><%= link_to h(user.login), user %></b>
        </p>
      <%end%>
    <%end%>  
<% else -%>

  <% form_tag session_path do -%>


<table border="0"><tr><td><%= label_tag 'login' %></td><td><%= text_field_tag 'login', @login %></td></tr>

    <tr><td><%= label_tag 'password' %></td><td><%= password_field_tag 'password', nil %></td></tr>
<tr><td><%= label_tag 'remember_me', 'Remember me' %></td><td><%= check_box_tag 'remember_me', '1', @remember_me %></td></tr>
<tr><td></td><td><table border="0"><tr><td><%= submit_tag 'Log in' %></td><td> <%= link_to (button_to("Sign up!")), signup_path(:anchor => 'signup'), { :title => "Create an account" } %></td></tr></table></td></tr>
</table>
  </form>  <!--<div id="user-bar-greeting"><a href="/login" style="border: none;" title="127.0.0.1">Not logged in</a></div>-->
  
  <% end -%>
  <!--<div id="user-bar-greeting"><%= link_to_login_with_IP 'Not logged in', :style => 'border: none;' %></div>-->
  <div id="user-bar-action"  ><!--<%= link_to "Log in",  login_path,  { :title => "Log in" } %> /-->
                               </div>
<% end -%>
</div>



  